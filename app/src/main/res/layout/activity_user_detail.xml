    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cvUserDetailOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivUserImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/deadpool" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivUserImage"
                    android:layout_centerHorizontal="true"
                    android:text="@string/user_name"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvUserUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUserName"
                    android:layout_centerHorizontal="true"
                    android:padding="4dp"
                    android:text="@string/user_url" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvUserDetailTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvUserDetailOne"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDataLableOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Data Label" />

                <TextView
                    android:id="@+id/tvDataValueOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataLableOne"
                    android:layout_marginBottom="4dp"
                    android:padding="2dp"
                    android:text="DataValueOne: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvDataLableTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataValueOne"
                    android:padding="2dp"
                    android:text="Data Label" />

                <TextView
                    android:id="@+id/tvDataValueTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataLableTwo"
                    android:layout_marginBottom="4dp"
                    android:padding="2dp"
                    android:text="DataValueTwo: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvDataLableThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataValueTwo"
                    android:padding="2dp"
                    android:text="Data Label" />

                <TextView
                    android:id="@+id/tvDataValueThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataLableThree"
                    android:layout_marginBottom="4dp"
                    android:padding="2dp"
                    android:text="DataValueThree: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvDataLableFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataValueThree"
                    android:padding="2dp"
                    android:text="Data Label" />

                <TextView
                    android:id="@+id/tvDataValueFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataLableFour"
                    android:layout_marginBottom="4dp"
                    android:padding="2dp"
                    android:text="DataValueFour: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvDataLableFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataValueFour"
                    android:padding="2dp"
                    android:text="Data Label" />

                <TextView
                    android:id="@+id/tvDataValueFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataLableFive"
                    android:layout_marginBottom="4dp"
                    android:padding="2dp"
                    android:text="DataValueFive: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvDataLableSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataValueFive"
                    android:padding="2dp"
                    android:text="Data Label" />

                <TextView
                    android:id="@+id/tvDataValueSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDataLableSix"
                    android:layout_marginBottom="4dp"
                    android:padding="2dp"
                    android:text="DataValueSix: "
                    android:textColor="@android:color/black" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
